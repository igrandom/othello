release: LOGICA.OBJ TEKEN.OBJ MAIN.OBJ
	ML /W3 /WX LOGICA.OBJ TEKEN.OBJ MAIN.OBJ /Fe OTHELLO.EXE

debug: LOGICAD.OBJ TEKEND.OBJ MAIND.OBJ
	ML /Zi /W3 /WX LOGICAD.OBJ TEKEND.OBJ MAIND.OBJ /Fe OTHELLOD.EXE

LOGICA.OBJ: LOGICA.ASM
	ML /c /W3 /WX /FoLOGICA.OBJ /Ta LOGICA.ASM
    
LOGICAD.OBJ: LOGICA.ASM
	ML /c /Zi /W3 /WX /FoLOGICAD.OBJ /Ta LOGICA.ASM

TEKEN.OBJ: TEKEN.ASM
	ML /c /W3 /WX /FoTEKEN.OBJ /Ta TEKEN.ASM
	
TEKEND.OBJ: TEKEN.ASM
	ML /c /Zi /W3 /WX /FoTEKEND.OBJ /Ta TEKEN.ASM
	
MAIN.OBJ: MAIN.ASM
	ML /c /W3 /WX /FoMAIN.OBJ /Ta MAIN.ASM
	
MAIND.OBJ: MAIN.ASM
	ML /c /Zi /W3 /WX /FoMAIND.OBJ /Ta MAIN.ASM


clean:
	del *.EXE
	del *.OBJ

cv: debug
	cv /s /43 OTHELLOD.EXE
